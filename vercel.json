{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "run_bot_task.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/run_bot_task",
      "dest": "run_bot_task.py"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "crons": [
    {
      "path": "/api/run_bot_task",
      "schedule": "0 0 * * *"
    }
  ]
}
